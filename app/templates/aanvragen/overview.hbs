{{page-title this.title}}

<div class="au-o-grid au-o-grid--flush au-o-grid--fixed">
  <div
    class="au-o-grid__item
           {{if
             this.hasActiveChildRoute
             'au-u-3-5@medium au-u-visible-medium-up'
             'au-u-1-1@medium'
           }}"
  >
    <div class="au-c-body-container" tabindex="0">
      <AuToolbar @size="large" as |Group|>
        <Group>
          <AuHeading @skin="2">{{this.title}}</AuHeading>
        </Group>
        <Group>
              <AuLink
                @route="aanvragen.new"
                @icon="add"
                @skin="button"
              >
                Nieuwe aanvrag
              </AuLink>
        </Group>
      </AuToolbar>
      <table class="au-c-table">
        <thead>
          <tr>
            <th>Beschrijving Handeling</th>
            <th>Beschrijving Huidige Staat</th>
            <th>Motivatie</th>
            <th>Details Aanduidingsobject</th>
            <th>Start Datum</th>
            <th>Eind Datum</th>
          </tr>
        </thead>
        <tbody>
          {{#each @model.aanvraag.data as |aanvraag|}}
            <tr>
              <td>{{aanvraag.attributes.beschrijvingHandeling}}</td>
              <td>{{aanvraag.attributes.beschrijvingHuidigeStaat}}</td>
              <td>{{aanvraag.attributes.motivatie}}</td>
              <td>{{aanvraag.detailsAanduidingsobject}}</td>
              <td>{{aanvraag.attributes.startdate}}</td>
              <td>{{aanvraag.attributes.enddate}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      Informatie over de besluiten
      <table class="au-c-table">
        <thead>
          <tr>
            <th>Source</th>
            <th>ID</th>
            <th>Volgt uit</th>
            <th>Voorafgaand</th>
            <th>Rechtsgevolgen</th>
            <th>Heeft Onderdelen</th>
          </tr>
        </thead>
        <tbody>
          {{#each @model.besluit.data as |besluit|}}
            <tr>
              <td>{{besluit.attributes.source}}</td>
              <td>{{besluit.attributes.identifier}}</td>
              <td>{{besluit.attributes.follows}}</td>
              <td>{{besluit.precedes}}</td>
              <td>{{besluit.attributes.rechtsgevolgen}}</td>
              <td>{{besluit.attributes.hasPart}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{outlet}}
</div>